<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>



    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="App.Theme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="crop_icon">@drawable/ic_crop_rotate_black</item>
        <item name="share_icon">@drawable/ic_share_black</item>
        <item name="delete_icon">@drawable/ic_delete_black</item>
        <item name="settings_icon">@drawable/ic_settings_black</item>
        <item name="camera_icon">@drawable/ic_camera_black</item>
        <item name="video_icon">@drawable/ic_video_black</item>
        <item name="set_wallpaper_color">@android:color/black</item>
        <item name="set_wallpaper_text_color">@android:color/white</item>
        <item name="play_icon">@drawable/ic_play_white</item>
        <item name="toolbarStyle">@style/Custom.Widget.Toolbar</item>
        <item name="toolbarNavigationButtonStyle">@style/Custom.Widget.Toolbar.Button.Navigation
        </item>
    </style>

    <style name="Base.Theme" parent="App.Theme">

        <item name="colorAccent">@android:color/black</item>
        <item name="ripple_color">?attr/colorPrimaryDark</item>
        <item name="vector_color">@android:color/black</item>
    </style>

    <style name="App.Theme.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="crop_icon">@drawable/ic_crop_rotate_white</item>
        <item name="share_icon">@drawable/ic_share_white</item>
        <item name="delete_icon">@drawable/ic_delete_white</item>
        <item name="settings_icon">@drawable/ic_settings_white</item>
        <item name="camera_icon">@drawable/ic_camera_white</item>
        <item name="video_icon">@drawable/ic_video_white</item>
        <item name="set_wallpaper_color">@android:color/white</item>
        <item name="set_wallpaper_text_color">@android:color/black</item>
        <item name="play_icon">@drawable/ic_play_black</item>
        <item name="toolbarStyle">@style/Custom.Widget.Toolbar</item>
        <item name="toolbarNavigationButtonStyle">@style/Custom.Widget.Toolbar.Button.Navigation
        </item>
    </style>

    <style name="Base.Theme.Dark" parent="App.Theme.Dark">
        <item name="colorAccent">@android:color/white</item>
        <item name="ripple_color">?attr/colorPrimaryDark</item>
        <item name="vector_color">@android:color/white</item>
    </style>

    <style name="Custom.Widget.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="maxButtonHeight">48dp</item>
        <item name="android:paddingLeft">@dimen/toolbar_h_padding</item>
        <item name="android:paddingRight">@dimen/toolbar_h_padding</item>
        <item name="contentInsetStart">@dimen/first_keyline</item>

    </style>

    <style name="Custom.Widget.Toolbar.Button.Navigation" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:minWidth">48dp</item>

    </style>

    <style name="Custom.Widget.ActionButton.Overflow" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>

    </style>

    <style name="Base.Theme.Action.Bar" parent="Theme.AppCompat.Light">
        <item name="colorAccent">?attr/colorPrimaryDark</item>

    </style>

